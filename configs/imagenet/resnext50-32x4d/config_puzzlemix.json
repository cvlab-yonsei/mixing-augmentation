{
    "name": "",
    
    "n_gpu": 1,
    "multiprocessing_distributed": false,
    "rank": 0,
    "world_size": 1,
    "dist_backend": "nccl",
    "dist_url": "tcp://127.0.0.1:12345",
    "seed": 1,
    "use_amp": false,
    "data_loader": {
        "type": "ClassificationDataLoader",
        "args": {
            "dataset": "imagenet",
            "batch_size": 256,
            "num_workers": 32,
            "pin_memory": true
        }
    },
    "arch": {
        "type": "ResNet",
        "args": {
            "depth": 50,
            "groups": 32,
            "width_per_group": 4,
            "zero_init_residual": true
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.1,
            "weight_decay": 1e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "eta_min": 0.0
        }
    },
    "mixing_augmentation": {
        "type": "PuzzleMix",
        "args":{
            "distribution": "beta",
            "alpha1": 1.0,
            "alpha2": 1.0,
            "mix_prob": 1.0,
            "n_labels": 3,
            "beta": 1.5,
            "gamma": 0.5,
            "eta": 0.2,
            "neigh_size": 4,
            "transport": true,
            "t_eps": 0.8,
            "t_batch_size": 16,
            "clean_lam": 1.0,
            "adv_p": 0,
            "mp": 8
        }
    },
    "evaluator": {
        "type": "Evaluator",
        "args": {}
    },
    "metrics": [
        "Average_Accuracy"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": -1,
        "validation_period": 1,
        "verbosity": 2,
        "monitor": "max val_Average_Accuracy_top1",
        "early_stop": -1,
        "reset_best_mnt": false,
        "tensorboard": false
    }
}